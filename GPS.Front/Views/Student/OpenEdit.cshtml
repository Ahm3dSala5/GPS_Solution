@model GraduationProjecrStore.Infrastructure.Domain.Entities.Business.Student

@{
    ViewData["Title"] = "Edit Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4">
    <form asp-controller="Student" asp-action="Update" method="post" class="border p-4 rounded shadow bg-light w-100">
        <h2 class="text-center mb-4">Edit Student Info</h2>

        <input type="hidden" name="Student_Id" value="@Model.Id" />

        <div class="mb-3">
            <label for="Student_FName" class="form-label">First Name</label>
            <input type="text" id="Student_FName" name="Student_FName" value="@Model.FirstName" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="Student_LName" class="form-label">Last Name</label>
            <input type="text" id="Student_LName" name="Student_LName" value="@Model.LastName" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="Student_Address" class="form-label">Address</label>
            <input type="text" id="Student_Address" name="Student_Address" value="@Model.Address" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="Student_FBirthDate" class="form-label">Birth Date</label>
            <input type="date" id="Student_FBirthDate" name="Student_FBirthDate" value="@Model.BirthDate.ToString("yyyy-MM-dd")" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="Student_GPA" class="form-label">GPA</label>
            <input type="number" step="0.01" id="Student_GPA" name="Student_GPA" value="@Model.GPA" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="Student_Level" class="form-label">Level</label>
            <input type="number" id="Student_Level" name="Student_Level" value="@Model.Level" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="Student_DepartmentId" class="form-label">Department ID</label>
            <input type="number" id="Student_DepartmentId" name="Student_DepartmentId" value="@Model.DepartmentId" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="Student_ProjectId" class="form-label">Project ID</label>
            <input type="number" id="Student_ProjectId" name="Student_ProjectId" value="@Model.ProjectId" class="form-control" />
        </div>

        <div class="mb-4">
            <label for="Student_SupervisorId" class="form-label">Supervisor ID</label>
            <input type="number" id="Student_SupervisorId" name="Student_SupervisorId" value="@Model.SupervisorId" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary w-100">Update</button>
    </form>
</div>

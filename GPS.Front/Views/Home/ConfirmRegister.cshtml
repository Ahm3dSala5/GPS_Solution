@{
    ViewData["Title"] = "Verify Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form asp-controller="Authentication" asp-action="ConfirmRegistration" method="post">
    <div style="margin-bottom: 20px;">
        <label for="UserName" style="display: block; margin-bottom: 5px; font-weight: 600;">Username</label>
        <input type="text" id="UserName" name="username" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" required />
    </div>

    <div style="margin-bottom: 25px;">
        <label for="VerificationCode" style="display: block; margin-bottom: 5px; font-weight: 600;">Verification Code</label>
        <input type="text" id="VerificationCode" name="confirmationcode" maxlength="6" pattern="\d{6}" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" required />
    </div>

    <button type="submit" style="width: 100%; padding: 12px; background-color: #28a745; color: white; border: none; border-radius: 5px; font-weight: bold;">
        Verify
    </button>
</form>

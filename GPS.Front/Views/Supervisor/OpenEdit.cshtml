@model GraduationProjecrStore.Infrastructure.Domain.Entities.Business.Supervisor

@{
    ViewData["Title"] = "Edit Supervisor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4">
    <form asp-controller="Supervisor" asp-action="Update" method="post" class="border p-4 rounded shadow bg-light w-100">
        <h2 class="text-center mb-4">Edit Supervisor Info</h2>

        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="mb-3">
            <label for="supFirstName" class="form-label">First Name</label>
            <input type="text" id="supFirstName" name="FirstName" value="@Model.FirstName" class="form-control" placeholder="Enter first name" required />
        </div>

        <div class="mb-3">
            <label for="supLastName" class="form-label">Last Name</label>
            <input type="text" id="supLastName" name="LastName" value="@Model.LastName" class="form-control" placeholder="Enter last name" required />
        </div>

        <div class="mb-3">
            <label for="supPosition" class="form-label">Position</label>
            <input type="text" id="supPosition" name="Position" value="@Model.Position" class="form-control" placeholder="Enter position" required />
        </div>

        <div class="mb-3">
            <label for="supAddress" class="form-label">Address</label>
            <input type="text" id="supAddress" name="Address" value="@Model.Address" class="form-control" placeholder="Enter address" />
        </div>

        <div class="mb-3">
            <label for="supBirthDate" class="form-label">Birth Date</label>
            <input type="date" id="supBirthDate" name="BirthDate" value="@Model.BirthDate.ToString("yyyy-MM-dd")" class="form-control" />
        </div>

        <div class="mb-4">
            <label for="supDepartmentId" class="form-label">Department ID</label>
            <input type="number" id="supDepartmentId" name="DepartmentId" value="@Model.DepartmentId" class="form-control" placeholder="Enter department ID" required />
        </div>

        <button type="submit" class="btn btn-primary w-100">Update</button>
    </form>
</div>
<script src="~/js/Supervisor/OpenEdit.js"></script>

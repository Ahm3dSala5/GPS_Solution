@model GraduationProjectStore.Core.Feature.Projects.CreateProjectDTO;
@{
    ViewData["Title"] = "Add New Project";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<div class="container my-5">
    <form asp-action="Upload" asp-controller="Project" method="post" enctype="multipart/form-data">
        <h2 class="mb-4">Add New Project</h2>

        <!-- Project Name -->
        <input asp-for="Name" placeholder="Enter Project Name" class="form-control mb-3 fw-semibold" />
        <span asp-validation-for="Name" class="text-danger"></span>

        <!-- Project Description -->
        <input asp-for="Description" placeholder="Enter Project Description" class="form-control mb-3 fw-semibold" />
        <span asp-validation-for="Description" class="text-danger"></span>

        <!-- College -->
        <select asp-for="CollegeId" class="form-select mb-3" asp-items="ViewBag.Colleges">
            <option value="">-- Select College --</option>
        </select>
        <span asp-validation-for="CollegeId" class="text-danger"></span>

        <!-- Department -->
        <select asp-for="DepartmentId" class="form-select mb-3" asp-items="ViewBag.Departments">
            <option value="">-- Select Department --</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>

        <!-- Supervisor -->
        <select asp-for="SupervisorId" class="form-select mb-3" asp-items="ViewBag.Supervisors">
            <option value="">-- Select Supervisor --</option>
        </select>
        <span asp-validation-for="SupervisorId" class="text-danger"></span>

        <!-- Project File -->
        <input asp-for="projectFile" type="file" class="form-control mb-4" />
        <span asp-validation-for="projectFile" class="text-danger"></span>

        <!-- Buttons -->
        <div class="d-flex gap-2">
            <button type="submit" class="btn text-white" style="background-color: #4c6a5a;">Save</button>
            <button type="reset" class="btn btn-secondary">Cancel</button>
        </div>
    </form>
</div>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Graduation Project Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/style.css" asp-append-version="true" />
</head>

<body>
    <div class="first-navbar">
        <nav class="navbar container">
            <div class="container-fluid">
                <div class="d-flex align-items-center">
                    <a href="#"><i class="fa-solid fa-house text-white pe-3 fs-5"></i></a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Home" asp-action="Profile" class="nav-link text-white">
                            <i class="fas fa-user-circle fa-lg"></i>
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Home" asp-action="Login" class="navbar-brand text-white">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </a>
                        <a asp-controller="Home" asp-action="Register" class="navbar-brand text-white">
                            <i class="fas fa-user-plus"></i> Register
                        </a>
                    }
                </div>
                <form class="d-flex" role="search" method="get" asp-controller="Project" asp-action="PaginateAll">
                    <input class="form-control m-0" type="search" name="search" placeholder="Search Our Site" aria-label="Search">
                    <button class="btn m-0" type="submit">
                        <i class="fa-solid fa-magnifying-glass text-white"></i>
                    </button>
                </form>
            </div>
        </nav>
    </div>
    <div class="container-fluid">
        <div class="container d-flex justify-content-between align-items-center pt-3">
            <div><img src="~/logo.png" alt="logo" class="logo" /></div>
            <div class="nav-text text-center">
                <h2>Zagazig University</h2>
                <h2>College of Computers and Information</h2>
            </div>
            <div><img src="~/logo2.png" alt="logo" class="logo" /></div>
        </div>
    </div>
    <div class="container-fluid graduationProjectStore mt-3 py-1">
        <h2 class="container">Graduation Project Store</h2>
    </div>
    <nav class="navbar navbar-expand-lg p-0">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse " id="navbarNav">
                <ul class="navbar-nav m-auto">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                    <a asp-controller="Project" asp-action="PaginateAll" class="nav-link">Projects</a>
                   

                    @if (User.IsInRole("Admin") || User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Student" asp-action="OpenStudents" class="nav-link">Student</a>
                        <a asp-controller="Supervisor" asp-action="OpenSupervisor" class="nav-link">Supervisor</a>
                        <a asp-controller="Department" asp-action="OpenDepts" class="nav-link">Department</a>
                    }

                    <a asp-controller="Home" asp-action="About" class="nav-link">About</a>
                    <a asp-controller="Home" asp-action="Contact" class="nav-link">Contact</a>
                </ul>
            </div>
        </div>
    </nav>
    <main class="container py-4">
        @RenderBody()
    </main>

    <footer style="background-color: #222; color: #fff; padding: 40px 0; text-align: center;">
        <div style="margin-bottom: 15px;">
            <h4 style="margin-bottom: 10px;">Graduation Project Store</h4>
            <p style="margin: 0;">© 2025 Zagazig University - All rights reserved.</p>
        </div>
        <div style="margin-top: 20px;">
            <a href="#" style="color: #fff; margin: 0 10px;"><i class="fab fa-facebook-f"></i></a>
            <a href="#" style="color: #fff; margin: 0 10px;"><i class="fab fa-twitter"></i></a>
            <a href="#" style="color: #fff; margin: 0 10px;"><i class="fab fa-linkedin-in"></i></a>
            <a href="#" style="color: #fff; margin: 0 10px;"><i class="fab fa-github"></i></a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/main.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

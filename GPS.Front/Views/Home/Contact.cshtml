@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<div class="contact-info" style="padding: 25px; background-color: #e6f2ff; border-left: 5px solid #007acc; margin-bottom: 30px; border-radius: 8px;">
    <h2 style="margin-top: 0; font-size: 26px; color: #004080;">Get in touch.</h2>
    <p style="font-size: 15px; color: #333;">
        We’re here to help and answer any questions you might have.<br />
        We will answer your inquiries in a maximum of 48 hours.
    </p>
</div>

<form style="max-width: 750px; margin: 0 auto; background-color: #fdfdfd; padding: 30px; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.05); font-family: 'Segoe UI', sans-serif;">
    <div class="full-width" style="margin-bottom: 20px;">
        <label for="name" style="display: block; margin-bottom: 6px; font-weight: 600; color: #222;">Name</label>
        <input type="text" id="name" name="name" style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 6px; font-size: 14px;">
    </div>

    <div class="inline-fields" style="display: flex; gap: 20px; margin-bottom: 20px;">
        <div style="flex: 1;">
            <label for="email" style="display: block; margin-bottom: 6px; font-weight: 600; color: #222;">Email</label>
            <input type="email" id="email" name="email" style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 6px; font-size: 14px;">
        </div>
        <div style="flex: 1;">
            <label for="phone" style="display: block; margin-bottom: 6px; font-weight: 600; color: #222;">Phone Number</label>
            <input type="text" id="phone" name="phone" style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 6px; font-size: 14px;">
        </div>
    </div>

    <div class="full-width" style="margin-bottom: 20px;">
        <label for="message" style="display: block; margin-bottom: 6px; font-weight: 600; color: #222;">Message</label>
        <textarea id="message" name="message" style="width: 100%; height: 120px; padding: 12px; border: 1px solid #ccc; border-radius: 6px; font-size: 14px;"></textarea>
    </div>

    <button type="submit" style="padding: 14px 28px; background-color: #007acc; color: white; border: none; border-radius: 6px; font-size: 15px; cursor: pointer;">
        SUBMIT NOW
    </button>
</form>
<script src="~/js/Home/Contact.js"></script>